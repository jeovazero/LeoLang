cabal-version:      3.0
name:               lambdaC
version:            0.1.0.0
homepage:           https://github.com/leorigon/TE-Infer-SSA
license:            GPL-3.0-only
license-file:       LICENSE
author:             Leonardo
maintainer:         leorigonn@hotmailcom
copyright:          2019
category:           Compilers/Interpreters
build-type:         Simple
extra-source-files: README.md,
                    src/Lambda/Lexer.x,
                    src/Lambda/Parser.y,
                    src/Lexer.x,
                    src/Parser.y

executable lambdaC
  ghc-options:        -O2
  hs-source-dirs:     src
  main-is:            Main.hs
  default-language:   Haskell2010
  build-tool-depends: alex:alex, happy:happy
  other-modules:    Lambda.Calculus,
                    Lambda.Lexer,
                    Lambda.Inference,
                    Lambda.Parser,
                    BasicBlock,
                    Converter,
                    Dominance,
                    Lexer,
                    Parser,
                    Effect,
                    SingleAssignment
  build-depends:    base >= 4.7 && < 5,
                    array >= 0.5,
                    containers >= 0.5,
                    mtl >= 2.0
